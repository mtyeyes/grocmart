#root
  display flex
  flex-direction column
  min-height 100vh

.visually-hidden
  position absolute
  overflow hidden
  clip rect(0 0 0 0)
  width 1px
  height 1px
  margin -1px

body
  margin 0
  padding 0
  min-width 320px

input
  all unset

ul
  list-style none
  margin 0
  padding 0

img
  display block

a
  color inherit
  text-decoration inherit

*, *:focus, *:hover
  outline none

.fade-in-from-top
  animation-name fade-in-from-top

@keyframes fade-in-from-top
  0%
    transform translate(0, -25%)
    opacity 0
  50%
    opacity 1
  100%
    transform translate(0, 0)

.fade-in-from-bottom
  animation-name fade-in-from-bottom

@keyframes fade-in-from-bottom
  0%
    transform translate(0, 25%)
    opacity 0
  50%
    opacity 1
  100%
    transform translate(0, 0)

.fade-in-from-left
  animation-name fade-in-from-left

@keyframes fade-in-from-left
  0%
    transform translate(-10%, 0)
    opacity 0
  50%
    opacity 1
  100%
    transform translate(0, 0)

.fade-in-from-right
  animation-name fade-in-from-right

@keyframes fade-in-from-right
  0%
    transform translate(10%, 0)
    opacity 0
  50%
    opacity 1
  100%
    transform translate(0, 0)