@import '../../variables.styl'
.logo.logo--centered
  padding 25px 0
  margin 0 auto
  width 249px
  height 52px

.error__title
  margin calc(30vh - 75px) 0 5px
  font-family $main-font
  font-size 130px
  font-weight 400
  line-height 130px
  letter-spacing 1px
  text-align center
  color $secondary-font-color

.error__description
  margin-top 5px
  margin 5px 0 25px
  font-size 22px
  font-family $main-font
  letter-spacing 2px
  text-align center
  text-transform uppercase
  color $main-font-color

.error__link
  width 200px
  margin 0 auto

@media (min-width: 500px)
  .error__wrapper
    height 100vh
    background-image url('../../resources/images/error-bg.webp')
    background-size cover
    background-position center

@media (min-width: 1000px)
  .error__title
    margin-top calc(30vh - 100px)
    font-size 195px
    line-height 195px

  .error__description
    margin-bottom 35px
    font-size 35px
    line-height 35px
    letter-spacing 3px

  .error__link
    width 250px