.badges
  padding 20px

.badges--bright
  background-color #ffffff

.badges--dark
  background linear-gradient( rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)), url('../../resources/images/badges-bg.webp')
  background-position center

@media (min-width 500px)
  .badges
    padding 55px 0

  .badges__list
    display flex
    flex-direction row
    flex-wrap nowrap
    justify-content center
@media (min-width 1000px)
  .badges
    padding 70px 0