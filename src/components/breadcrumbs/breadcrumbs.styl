@import '../../variables.styl'
.breadcrumbs
  background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('../../resources/images/breadcrumbs-bg.webp');
  background-size cover
  background-position top center

.breadcrumbs__page-title
  padding 30px 0
  margin 0
  font-family $main-font
  font-size 26px
  font-weight 600
  text-transform uppercase
  text-align center
  color $handwriting-font-color
  line-height 30px

.breadcrumbs__list
  display flex
  flex-wrap wrap
  margin 0
  padding 15px
  background-color #f9faf9
  justify-content center
  list-style-type none

.breadcrumbs__item
  align-self baseline
  margin-right 10px
  font-family $main-font
  font-size 12px
  font-weight 600
  letter-spacing 2px
  color $main-font-color
  text-transform uppercase

.breadcrumbs__item:last-child
  margin-right 0

.breadcrumbs__icon
  margin-left 10px
  font-size 14px

.breadcrumbs__link
  color $secondary-font-color
  transition $animation-speed

.breadcrumbs__link:hover,
.breadcrumbs__link:focus
  color $accent-color

@media (min-width 700px)
  .breadcrumbs
    background-position center

  .breadcrumbs__page-title
    padding 60px 0
    font-size 35px
    letter-spacing 1px

  .breadcrumbs__list
    padding 15px 120px

@media (min-width 1200px)
  .breadcrumbs__page-title
    padding 130px 0
    font-size 55px
    letter-spacing 2px