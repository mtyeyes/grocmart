@import '../../../../variables.styl'
.navigation__list
  display flex
  font-weight 700
  letter-spacing .1em
  text-transform uppercase
  font-family poppins, sans-serif

@media (max-width 999px)

  .navigation__wrapper
    visibility hidden
    position fixed
    top 55px
    left -100%
    transition $animation-speed

  .navigation__wrapper--show
    visibility: visible
    left 0
    background-color #ffffff
    width: 140px

  .navigation__list
    flex-direction column
    padding 20px 0
    font-size 14px
    line-height 1.4


@media (min-width 1000px)

  .navigation__wrapper
    margin 0 auto

  .navigation__list
    display flex
    flex-direction row
    justify-content space-between
    width 560px
    color main-font-color
    line-height 1.2
