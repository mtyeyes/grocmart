@import '../../variables.styl'
.logo--selected 
  pointer-events none
  cursor default

.logo
  display block
  width 140px
  height 29px
  border-radius 10px
  transition $animation-speed

.logo:focus
  transform scale(1.1)

.logo img
  width 100%
  height 100%

@media (min-width: 1170px)
  .logo
    width 249px
    height 52px