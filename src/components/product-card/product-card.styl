@import "../../variables.styl"
.product-card
  position absolute
  top 0
  left 0
  width calc(100% - 40px)
  height calc(100% - 50px)
  padding 25px 20px
  display flex
  flex-direction column
  flex-wrap nowrap
  justify-content flex-end
  align-items center
  background-color #f5f5f5
  border-radius 2%

.product-card__flags-container
  position absolute
  top 3px
  left 0
  width 100%
  display flex
  flex-direction row
  flex-wrap nowrap
  justify-content flex-end

.product-card__flag
  display inline-block
  border-radius 6px
  padding 5px 12px
  margin-right 15px
  font-family $main-font
  font-size 14px
  font-weight 600
  line-height 14px
  color $handwriting-font-color
  text-transform uppercase

.product-card__flag--green
  background-color $accent-green-color

.product-card__flag--red
  background-color $accent-color

.product-card__title
  margin 20px 0 0
  font-weight 600
  font-family $main-font
  font-size 16px
  color $main-font-color
  text-transform uppercase
  text-align center

.product-card__price-container
  display flex
  flex-direction row
  justify-content center
  flex-wrap nowrap

.product-card__price
  margin 0
  font-family $secondary-font
  font-size 15px
  font-weight 700
  letter-spacing 0

.product-card__price--original
  color $main-font-color
  text-decoration line-through
  margin-right 10px
  opacity 0.5

.product-card__price--total
  color $accent-green-color

.product-card__controls
  width 100%
  display flex
  flex-direction row
  justify-content center

.product-card__controls .product-card__btn
  width 50px
  height 50px
  line-height 50px
  font-size 25px
  margin 15px 10px 0
  border-radius 50%
  text-align center
  color $handwriting-font-color

.product-card__controls .product-card__btn--product-info
  background-color $accent-green-color

.product-card__controls .product-card__btn--add-to-cart
  background-color $accent-color

.product-card__controls .product-card__btn--product-info:focus,
.product-card__controls .product-card__btn--product-info:hover
  background-color $accent-color

.product-card__controls .product-card__btn--add-to-cart:focus,
.product-card__controls .product-card__btn--add-to-cart:hover
  background-color $darker-accent-color

.product-card__thumbnail
  max-width 100%

@media (min-width: 1000px)
  .product-card__title
    font-size 18px

@media (min-width: 1200px)
  .product-card
    padding 25px 20px 60px
    height calc(100% - 85px)
    transition $animation-speed

  .product-card:focus-within,
  .product-card:hover
    top -20px
    height calc(100% - 95px)
    padding-bottom 110px
    background-color $handwriting-font-color
    box-shadow 0 0 12px 0 rgba(0, 0, 0, 0.25)

  .product-card__controls
    position absolute
    bottom 40px
    left 0
    transition $animation-speed

  .product-card__controls .product-card__btn
    height 0
    margin-top 0
    transform scale(0)
    transition $animation-speed

  .product-card:focus-within .product-card__btn,
  .product-card:hover .product-card__btn
    height auto
    transform none

  .product-card:focus-within .product-card__btn--add-to-cart,
  .product-card:hover .product-card__btn--add-to-cart
    transition-delay 0ms, $animation-speed
    transition-property background-color, transform

  .product-card:focus-within .product-card__btn:active,
  .product-card:hover .product-card__btn:active
    transform scale(0.95)
    transition-delay 0ms
    transition-property transform
