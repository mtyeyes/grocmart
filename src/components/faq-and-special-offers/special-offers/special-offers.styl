.specials-slider__wrapper
  position relative
  width calc(100% - 30px)
  margin 50px auto 30px
  background-color #f5f5f5
  background-image url("../../../resources/images/specials-bg-pattern.jpg")

.specials-slider__container
  margin-left -70px
  width calc(100% + 70px * 2)
  display flex
  flex-direction row
  flex-wrap nowrap
  align-items stretch

.specials-slider__dots-container
  bottom 30px

@media (min-width: 500px)
  .specials-slider__wrapper
    width 350px

@media (min-width: 800px)
  .specials-slider__wrapper
    margin 0 auto
    width 240px

@media (min-width: 1000px)
  .specials-slider__wrapper
    width 370px

  .specials-slider__dots-container
    bottom 40px

@media (min-width: 1200px)
  .specials-slider__wrapper
    width 550px

  .specials-slider__container
    margin-left -95px
    width calc(100% + 95px * 2)