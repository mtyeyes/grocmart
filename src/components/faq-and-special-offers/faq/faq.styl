@import '../../../variables.styl'

.faq__container
  margin 20px 15px

.faq__paragraph
  margin-bottom 0
  font-size 18px
  font-family $handwriting-font
  letter-spacing 0.5px
  font-weight 700
  color $accent-green-color
  text-align center
  text-transform capitalize

.faq__heading
  margin-top 10px
  font-family $main-font
  font-size 26px
  font-weight 600
  letter-spacing 2px
  color $main-font-color
  text-align center
  text-transform uppercase

@media (min-width: 800px)
  .faq__container
    margin 20px 0 0 40px

  .faq__paragraph
    margin-top 0
    font-size 20px
    text-align left

  .faq__heading
    font-size 30px
    text-align left

@media (min-width: 1000px)
  .faq__paragraph
    font-size 22px

  .faq__heading
    font-size 45px

@media (min-width: 1200px)
  .faq__container
    margin 0 0 0 50px

  .faq__paragraph
    font-size 24px

  .faq__heading
    font-size 55px