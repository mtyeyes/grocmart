@import '../../../variables.styl'
.cart-controls
  width 280px
  margin 0 auto

.cart-controls__paragraph
  font-family $main-font
  font-size 20px
  font-weight 500
  letter-spacing 0.5px
  color $secondary-font-color
  text-align center

.cart-controls__price
  font-size 22px
  padding-left 10px
  letter-spacing 1px
  color $main-font-color

@media (min-width: 780px)
  .cart-controls
    display flex
    justify-content space-between
    width 682px
    align-items center

  .cart-controls__paragraph
    font-size 22px

  .cart-controls__price
    padding-left 15px

@media (min-width: 1100px)
  .cart-controls
    margin-top 30px
    justify-content flex-end
    width 832px

  .cart-controls__paragraph
    margin 0 70px 0 0